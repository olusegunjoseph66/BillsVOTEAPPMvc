<!-- Views/Vote/Submit.cshtml -->
@{
    ViewData["Title"] = "Submit Vote";
    var topic = ViewBag.Topic as Topic;
}

<h1>@topic.Title</h1>
<p>@topic.Description</p>

<form method="post" action="@Url.Action("Submit", "Vote", new { id = topic.Id })">
    <div class="form-group">
        <label>Your Vote:</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="voteValue" id="voteYes" value="true" checked>
                <label class="form-check-label" for="voteYes">Hi</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="voteValue" id="voteNo" value="false">
                <label class="form-check-label" for="voteNo">Na</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit Vote</button>
    <a href="@Url.Action("Index", "Vote", new { id = topic.Id })" class="btn btn-secondary">Cancel</a>
</form>